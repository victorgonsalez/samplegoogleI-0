<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="30dip"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        style="@style/TextViewTheme"
        android:id="@+id/title_message"
        android:layout_marginTop="5dip"
        android:layout_below="@id/main_title"
        android:text="@string/title_notification" />

    <EditText
        style="@style/EditTextTheme"
        android:id="@+id/title_notification"
        android:layout_below="@id/title_message" />

    <TextView
        style="@style/TextViewTheme"
        android:id="@+id/context_message"
        android:layout_below="@id/title_notification"
        android:gravity="center_horizontal"
        android:text="@string/context_notification"
        android:textStyle="italic"
        android:textSize="16sp" />

    <EditText
        style="@style/EditTextTheme"
        android:id="@+id/context_notification"
        android:layout_below="@id/context_message" />

    <TextView
        style="@style/TextViewTheme"
        android:id="@+id/data_message"
        android:layout_below="@id/context_notification"
        android:text="@string/data_notification" />

    <EditText
        style="@style/EditTextTheme"
        android:id="@+id/data_notification"
        android:layout_below="@id/data_message" />

    <Button
        android:id="@+id/btn_send_notification"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="30dip"
        android:layout_marginStart="10dip"
        android:layout_marginEnd="10dip"
        android:layout_below="@id/data_notification"
        android:text="@string/send_notification" />

</RelativeLayout>
