<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="40dip"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/title_description"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:layout_below="@id/main_title"
        android:gravity="center_horizontal|center"
        android:text="@string/title_notification"
        android:textStyle="italic"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_height="35dip"
        android:layout_width="match_parent"
        android:background="#E0E0E0"
        android:singleLine="true"
        android:layout_margin="20dip"
        android:layout_below="@+id/title_description"
        android:gravity="center_horizontal|center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/main_description"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:layout_below="@id/edit_title"
        android:gravity="center_horizontal|center"
        android:text="@string/message_notification"
        android:textStyle="italic"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_height="35dip"
        android:layout_width="match_parent"
        android:background="#E0E0E0"
        android:singleLine="true"
        android:layout_margin="20dip"
        android:layout_below="@+id/main_description"
        android:gravity="center_horizontal|center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_maps"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:layout_below="@id/edit_message"
        android:gravity="center_horizontal"
        android:text="@string/title_maps_app"
        android:textStyle="italic"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_maps"
        android:layout_height="35dip"
        android:layout_width="match_parent"
        android:background="#E0E0E0"
        android:singleLine="true"
        android:layout_margin="20dip"
        android:layout_below="@id/text_maps"
        android:gravity="center_horizontal|center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_send_notification"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="40dip"
        android:layout_marginStart="10dip"
        android:layout_marginEnd="10dip"
        android:layout_below="@+id/edit_maps"
        android:text="@string/send_notification" />

</RelativeLayout>
